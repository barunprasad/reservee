{
  "name": "rails",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/rails/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rspack:rspack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/rails",
        "index": "apps/rails/src/index.html",
        "baseHref": "/",
        "main": "apps/rails/src/main.ts",
        "tsConfig": "apps/rails/tsconfig.app.json",
        "assets": ["apps/rails/src/favicon.ico", "apps/rails/src/assets"],
        "rspackConfig": "apps/rails/rspack.config.ts",
        "styles": ["apps/rails/src/styles.scss"],
        "scripts": [],
        "configurations": {
          "development": {
            "mode": "development"
          },
          "production": {
            "mode": "production",
            "optimization": true,
            "sourceMap": false,
            "outputHashing": "all",
            "namedChunks": false,
            "extractLicenses": true,
            "vendorChunk": false
          }
        },
        "target": "web"
      },
      "configurations": {
        "production": {
          "rspackConfig": "apps/rails/rspack.config.prod.ts"
        }
      }
    },
    "serve": {
      "executor": "@nx/rspack:module-federation-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "rails:build",
        "hmr": true,
        "port": 4204
      },
      "configurations": {
        "development": {
          "buildTarget": "rails:build:development"
        },
        "production": {
          "buildTarget": "rails:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "executor": "@nx/rspack:module-federation-static-server",
      "defaultConfiguration": "production",
      "options": {
        "serveTarget": "rails:serve"
      },
      "configurations": {
        "development": {
          "serveTarget": "rails:serve:development"
        },
        "production": {
          "serveTarget": "rails:serve:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/rails/jest.config.ts"
      }
    }
  }
}
